<Window x:Class="BibliotekaWSB.ViewsWPFModel.BookSearchView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wyszukiwarka książek" Height="900" Width="960"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True">
    <Border CornerRadius="12">
        <Border CornerRadius="10"
                BorderThickness="2"
                Opacity="0.95">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#462AD8" Offset="0"/>
                    <GradientStop Color="#DA34AE" Offset="0.75"/>
                    <GradientStop Color="#8A16C1" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="#060531" Offset="0"/>
                    <GradientStop Color="#1B1448" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!-- Nagłówek z przyciskami -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="btnMinimize"
                            BorderThickness="0"
                            Content="-"
                            Foreground="White"
                            FontSize="16"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Grid.Column="1"
                            Click="btnMinimize_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#28AEED"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#278BEF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18"
                                        CornerRadius="9"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button x:Name="btnClose"
                            BorderThickness="0"
                            Content="X"
                            Foreground="White"
                            FontSize="12"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Grid.Column="2"
                            Click="btnClose_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#DA34AE"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#C62DAE"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18"
                                        CornerRadius="9"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

                <!-- Główna zawartość -->
                <Grid Grid.Row="1" Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="12*"/>
                        <ColumnDefinition Width="7*"/>
                        <ColumnDefinition Width="409*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <!-- Pole wyszukiwania -->
                    <StackPanel Orientation="Horizontal" 
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Center" 
                                Grid.ColumnSpan="3">
                        <TextBox x:Name="SearchBox"
                                 Width="532" Height="30"
                                 Margin="0,0,10,0"
                                 FontFamily="Montserrat"
                                 FontSize="13"
                                 FontWeight="Medium"
                                 Foreground="Black"
                                 CaretBrush="LightGray"
                                 BorderBrush="DarkGray"
                                 BorderThickness="0,0,0,2"
                                 VerticalContentAlignment="Center"
                                 Padding="20,0,0,0"
                                 HorizontalContentAlignment="Center"/>
                        <Button Content="Szukaj"
                                Width="100" Height="30"
                                Background="#462AD8" Foreground="White" Cursor="Hand"
                                FontFamily="Montserrat" FontSize="13"
                                Click="SearchButton_Click">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Background" Value="#462AD8"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#28AEED"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border CornerRadius="15" 
                                            Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"
                                                          HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <ComboBox x:Name="SortBox"
                                  Width="200" Height="30"
                                  Margin="10,0,0,0"
                                  FontFamily="Montserrat"
                                  FontSize="13"
                                  FontWeight="Medium"
                                  Foreground="Black"
                                  BorderBrush="DarkGray"
                                  BorderThickness="0,0,0,2"
                                  VerticalContentAlignment="Center"
                                  Padding="10,0,0,0"
                                  SelectionChanged="SortBox_SelectionChanged"
                                  HorizontalContentAlignment="Center">
                            <ComboBoxItem Content="Sortuj rosnąco" />
                            <ComboBoxItem Content="Sortuj malejąco" />
                        </ComboBox>
                    </StackPanel>

                    <!-- Lista książek -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                  HorizontalScrollBarVisibility="Disabled" 
                                  Grid.Row="1" Grid.ColumnSpan="3">
                        <ListView x:Name="BookList" Background="#1B1448" Foreground="White" Height="786">
                            <!-- Dodanie ItemContainerStyle dla podświetlenia wiersza -->
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontFamily" Value="Montserrat"/>
                                    <Setter Property="FontSize" Value="12"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#D0E7FF"/>
                                            <!-- Nowy kolor podświetlenia -->
                                            <Setter Property="Foreground" Value="Black"/>
                                            <!-- Kolor tekstu dla kontrastu -->
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#A9D0F5"/>
                                            <!-- Kolor wybranego elementu -->
                                            <Setter Property="Foreground" Value="Black"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ListView.ItemContainerStyle>

                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Tytuł" DisplayMemberBinding="{Binding Title}" Width="200"/>
                                    <GridViewColumn Header="Autor" DisplayMemberBinding="{Binding Author}" Width="150"/>
                                    <GridViewColumn Header="Kategoria" DisplayMemberBinding="{Binding Category}" Width="150"/>
                                    <GridViewColumn Header="Dostępność" DisplayMemberBinding="{Binding Availability}" Width="120"/>

                                    <!-- Kolumna Szczegóły -->
                                    <GridViewColumn Header="Szczegóły" Width="140">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="Szczegóły"
                                                        Width="120"
                                                        Height="30"
                                                        Background="#8A16C1"
                                                        Foreground="White"
                                                        FontFamily="Montserrat"
                                                        FontSize="12"
                                                        FontWeight="Medium"
                                                        Cursor="Hand"
                                                        Click="DetailsButton_Click"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Background" Value="#8A16C1"/>
                                                            <Setter Property="FontWeight" Value="Medium"/>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="#28AEED"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                    <Button.Template>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border CornerRadius="15" 
                                                                    Background="{TemplateBinding Background}">
                                                                <ContentPresenter VerticalAlignment="Center"
                                                                                  HorizontalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                </Button>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <!-- Kolumna Akcja -->
                                    <GridViewColumn Header="Akcja" Width="140">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="Wypożycz"
                                                        Width="120"
                                                        Height="30"
                                                        Background="#28AEED" Foreground="White" 
                                                        FontFamily="Montserrat" FontSize="12"
                                                        FontWeight="Medium"
                                                        Cursor="Hand"
                                                        Click="RentBook_Click"
                                                        HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Background" Value="#28AEED"/>
                                                            <Setter Property="FontWeight" Value="Medium"/>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="#278BEF"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                    <Button.Template>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border CornerRadius="15" 
                                                                    Background="{TemplateBinding Background}">
                                                                <ContentPresenter VerticalAlignment="Center"
                                                                                  HorizontalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                </Button>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </ScrollViewer>
                </Grid>
                <Button Content="Cofnij"
                    Foreground="White"
                    FontSize="14"
                    FontFamily="Montserrat"
                    Margin="0,5,831,851"
                    Grid.RowSpan="2"
                    Click="btn_Back_Click">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="#DA34AE"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#28AEED"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Width="100" Height="30"
                                CornerRadius="15"
                                Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                    HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Przycisk Cofnij -->
            </Grid>
        </Border>
    </Border>
</Window>
